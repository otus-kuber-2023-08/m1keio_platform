apiVersion: batch/v1
kind: Job
metadata:
  namespace: default
  name: change-password-{{ name }}-job
  labels:
    usage: change-password-{{ name }}-job
spec:
  template:
    metadata:
      name: change-password-{{ name }}-cronjob
    spec:
      restartPolicy: OnFailure
      containers:
      - name: change-password-{{ name }}
        image: {{ image }}
        imagePullPolicy: IfNotPresent
        command:
        - /bin/sh
        - -c
        - "mysql -u root -h {{ name }} -p{{ old_password }} {{ database }} -e 'ALTER USER \"root\"@\"%\" IDENTIFIED BY \"{{ new_password }}\";'"
